// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    email String  @unique
    password String
    firstName String
    lastName String
    ownedGroups Group[] @relation("OwnedGroups")
    memberships GroupMembership[] @relation("IsMember")
}

model Group {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String
    createdAt DateTime @default(now())
    owner User @relation("OwnedGroups", fields: [ownerId], references: [id], onUpdate: Cascade, onDelete: Cascade)
    ownerId String @db.ObjectId
    userMemberships GroupMembership[] @relation("HasMembers")
}

model GroupMembership {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    user User @relation("IsMember", fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
    userId String @db.ObjectId
    group Group @relation("HasMembers", fields: [groupId], references: [id], onUpdate: Cascade, onDelete: Cascade)
    groupId String @db.ObjectId
}
